<style>
  /* Navbar logo styling */
  .navbar-brand img {
    height: 50px; /* adjust as needed */
    width: auto;
  }

  /* Centered brand text */
  .navbar-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    white-space: nowrap;
  }

  /* Back button styling */
  .back-btn {
    color: #6c757d;         /* Bootstrap secondary grey */
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-btn:hover {
    color: #000000 !important; /* Turn black on hover */
  }

  /* Adjust for mobile */
  @media (max-width: 992px) {
    .navbar-center {
      font-size: 14px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
  <div class="container-fluid position-relative">
    <!-- Logo on the left -->
    <a class="navbar-brand" href="/">
      <img src="/images/logo.png" alt="Olive Chairs Logo">
    </a>

    <!-- Back Button (only if showBack is true) -->
    <% if (typeof showBack !== 'undefined' && showBack) { %>
      <a href="/leads" id="navBackBtn"
        class="back-btn ms-4 d-flex align-items-center text-decoration-none">
        <span class="d-none d-md-inline">&larr; Back</span>
      </a>
    <% } %>

    <!-- Centered CRM text -->
    <div class="navbar-center fw-bold">
      <span class="d-lg-none">CRM</span>
      <span class="d-none d-lg-inline">Customer Relationship Management</span>
    </div>

    <!-- Mobile toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Links on the right -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link <%= (activePage === 'dashboard') ? 'active' : '' %>" href="/">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (activePage === 'leads') ? 'active' : '' %>" href="/leads">Leads</a>
        </li>
        <% if (user && user.role === 'admin') { %>
        <li class="nav-item">
          <a class="nav-link <%= (activePage === 'users') ? 'active' : '' %>" href="/users">Users</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (activePage === 'chairs') ? 'active' : '' %>" href="/chairs">Chairs</a>
        </li>
        <% } %>

        <!-- Profile dropdown -->
        <% if (user) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i>
            <span><%= user.fullName %> (<%= user.role %>)</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><span class="dropdown-item-text">Signed in as <strong><%= user.username %></strong></span></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/auth/logout">Logout</a></li>
          </ul>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<script>
(function () {
  const backBtn = document.getElementById("navBackBtn");
  if (!backBtn) return;

  function getSavedLeadsUrl() {
    try { return sessionStorage.getItem("leadsLastUrl"); }
    catch { return null; }
  }

  function pickFallback() {
    try {
      const ref = document.referrer;
      if (ref && new URL(ref).origin === location.origin) return ref;
    } catch {}

    return getSavedLeadsUrl() || "/leads";
  }

  function smartBack() {
    try {
      if (history.length > 1 && document.referrer.includes(location.origin)) {
        history.back();
        return;
      }
      location.href = pickFallback();
    } catch {
      location.href = "/leads";
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    backBtn.href = pickFallback(); // enables long-press open-in-new-tab
    backBtn.addEventListener("click", (e) => {
      e.preventDefault();
      smartBack();
    });
  });
})();
</script>