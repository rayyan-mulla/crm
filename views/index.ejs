<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard - Olive Chairs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .chart-container { height: 300px; }
    .chart-wrapper {
      position: relative;
      height: 250px;
      width: 100%;
    }
    .chart-wrapper.doughnut {
      height: 220px;
    }
  </style>
</head>
<body>
<%- include('partials/navbar', { user, activePage }) %>

<div class="container py-4">

  <h3 class="mb-4">Welcome, <%= user.fullName %></h3>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5>Total Leads</h5>
          <h3><%= summary.totalLeads || 0 %></h3>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5>New Leads</h5>
          <h3><%= summary.newLeads || 0 %></h3>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5>In Progress</h5>
          <h3><%= summary.inProgressLeads || 0 %></h3>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5>Closed</h5>
          <h3><%= summary.closedLeads || 0 %></h3>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body h-100 d-flex flex-column">
          <h5 class="mb-3">Lead Status</h5>
          <% if (summary.totalLeads) { %>
            <div class="chart-wrapper doughnut">
              <canvas id="statusChart"></canvas>
            </div>
          <% } else { %>
            <div class="alert alert-light flex-grow-1 d-flex align-items-center justify-content-center">
              No leads available
            </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body h-100 d-flex flex-column">
          <h5 class="mb-3">Leads by Source</h5>
          <% if (charts.source.data.length) { %>
            <div class="chart-wrapper">
              <canvas id="sourceChart"></canvas>
            </div>
          <% } else { %>
            <div class="alert alert-light flex-grow-1 d-flex align-items-center justify-content-center">
              No leads available
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- User Performance -->
  <% if (user.role === 'admin') { %>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5>User Performance</h5>
        <% if (users && users.length) { %>
        <div class="table-responsive">
          <table class="table table-sm table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Total Leads</th>
                <th>Closed Leads</th>
                <th>Conversion %</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(u => { %>
                <tr>
                  <td><%= u.fullName %></td>
                  <td><%= u.role %></td>
                  <td><%= u.totalLeads || 0 %></td>
                  <td><%= u.closedLeads || 0 %></td>
                  <td><%= u.conversionRate || 0 %>%</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } else { %>
          <div class="alert alert-light">No user performance data yet.</div>
        <% } %>
      </div>
    </div>
  <% } else if (users && users.length === 1) { %>
    <!-- Compact My Performance card for non-admin -->
    <div class="card shadow-sm mb-4">
      <div class="card-body text-center">
        <h5>My Performance</h5>
        <div class="row g-3 mt-2">
          <div class="col-4">
            <div class="fw-bold"><%= users[0].totalLeads || 0 %></div>
            <div class="text-muted small">Total Leads</div>
          </div>
          <div class="col-4">
            <div class="fw-bold"><%= users[0].closedLeads || 0 %></div>
            <div class="text-muted small">Closed Leads</div>
          </div>
          <div class="col-4">
            <div class="fw-bold"><%= users[0].conversionRate || 0 %>%</div>
            <div class="text-muted small">Conversion</div>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Recent Activity -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5>Recent Activity</h5>
      <% if (activity && activity.length) { %>
        <ul class="list-group list-group-flush">
          <% activity.forEach(a => { %>
            <li class="list-group-item d-flex justify-content-between">
              <span><%= a.message %></span>
              <small class="text-muted"><%= a.time %></small>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <div class="alert alert-light mb-0">No recent activity yet.</div>
      <% } %>
    </div>
  </div>

</div>

<script>
  <% if (summary.totalLeads) { %>
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
      type: 'doughnut',
      data: {
        labels: ['New', 'In Progress', 'Closed'],
        datasets: [{
          data: [<%= summary.newLeads %>, <%= summary.inProgressLeads %>, <%= summary.closedLeads %>],
          backgroundColor: ['#0d6efd','#ffc107','#198754']
        }]
      },
      options: { responsive: true, maintainAspectRatio: false }
    });
  <% } %>

  <% if (charts.source.data.length) { %>
    const sourceCtx = document.getElementById('sourceChart').getContext('2d');
    new Chart(sourceCtx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(charts.source.labels) %>,
        datasets: [{
          label: 'Leads',
          data: <%- JSON.stringify(charts.source.data) %>,
          backgroundColor: '#0d6efd'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: { y: { beginAtZero: true } }
      }
    });
  <% } %>
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
