<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Dashboard - Olive Chairs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .chart-container { height: 300px; }
    .chart-wrapper {
      position: relative;
      height: 250px;
      width: 100%;
    }
    .chart-wrapper.doughnut {
      height: 220px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .small-card .card-body {
    padding: 0.5rem 0.25rem; /* reduce height */
  }
  .small-card h6 {
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }
  .small-card .fs-6 {
    font-size: 1rem !important;
  }

  /* Custom 7-column flex for large screens */
  @media (min-width: 992px) {
    .small-cards {
      display: flex;
      flex-wrap: nowrap;
    }
    .small-cards .card-wrapper {
      flex: 1 0 0;
      max-width: calc(100% / 7);
    }
  }
  </style>
</head>
<body>
<%- include('partials/navbar', { user, activePage }) %>

<div class="container py-4">

  <h3 class="mb-4">Welcome, <%= user.fullName %></h3>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4 small-cards">
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads" class="card shadow-sm text-center bg-light text-dark border text-decoration-none">
        <div class="card-body">
          <h5>Total Leads</h5>
          <h3><%= summary.totalLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=New" class="card shadow-sm text-center bg-primary text-white border text-decoration-none">
        <div class="card-body">
          <h5>New Leads</h5>
          <h3><%= summary.newLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=In%20Progress" class="card shadow-sm text-center bg-warning text-white border text-decoration-none">
        <div class="card-body">
          <h5>In Progress</h5>
          <h3><%= summary.inProgressLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=Assigned" class="card shadow-sm text-center bg-info text-white border text-decoration-none">
        <div class="card-body">
          <h5>Assigned</h5>
          <h3><%= summary.assignedLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=Deal%20Drop" class="card shadow-sm text-center bg-danger text-white border text-decoration-none">
        <div class="card-body">
          <h5>Deal Drop</h5>
          <h3><%= summary.dealDropLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=Closed" class="card shadow-sm text-center bg-success text-white border text-decoration-none">
        <div class="card-body">
          <h5>Closed</h5>
          <h3><%= summary.closedLeads || 0 %></h3>
        </div>
      </a>
    </div>
    <div class="col-4 col-lg card-wrapper">
      <a href="/leads?status=Other" class="card shadow-sm text-center bg-secondary text-white border text-decoration-none">
        <div class="card-body">
          <h5>Other</h5>
          <h3><%= summary.otherLeads || 0 %></h3>
        </div>
      </a>
    </div>
  </div>

  <!-- Charts Row 1: Status + Source -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Lead Status</h5>
          <% if (summary.totalLeads) { %>
            <div class="chart-wrapper doughnut"><canvas id="statusChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No leads available</div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Leads by Source</h5>
          <% if (charts.source.data.length) { %>
            <div class="chart-wrapper"><canvas id="sourceChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No leads available</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row 2: Chairs by User + Revenue by User -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Chairs Sold by User</h5>
          <% if (charts.chairsByUser.data.length) { %>
            <div class="chart-wrapper"><canvas id="chairsByUserChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No chair sales yet</div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Revenue by User</h5>
          <% if (charts.revenueByUser.data.length) { %>
            <div class="chart-wrapper"><canvas id="revenueByUserChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No revenue data yet</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row 3: Chairs by Model -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Chairs Sold by Model</h5>
          <% if (charts.chairsByModel.data.length) { %>
            <div class="chart-wrapper doughnut"><canvas id="chairsByModelChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No model data yet</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row 4: Monthly Trend -->
  <div class="row g-4 mb-4">
    <div class="col-12">
      <div class="card shadow-sm chart-container">
        <div class="card-body">
          <h5>Monthly Chairs Sold & Revenue</h5>
          <% if (charts.monthlyTrend.labels.length) { %>
            <div class="chart-wrapper"><canvas id="monthlyTrendChart"></canvas></div>
          <% } else { %>
            <div class="alert alert-light">No trend data yet</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- User Performance -->
  <% if (user.role === 'admin') { %>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5>User Performance</h5>
        <% if (users && users.length) { %>
        <div class="table-responsive">
          <table class="table table-sm table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Total Leads</th>
                <th class="text-primary">New</th>
                <th class="text-warning">In Progress</th>
                <th class="text-info">Assigned</th>
                <th class="text-danger">Deal Drop</th>
                <th class="text-secondary">Other</th>
                <th class="text-success">Closed</th>
                <th>Conversion %</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(u => { %>
                <tr>
                  <td><%= u.fullName %></td>
                  <td><%= u.role %></td>
                  <td><%= u.totalLeads || 0 %></td>
                  <td class="text-primary"><%= u.newLeads || 0 %></td>
                  <td class="text-warning"><%= u.inProgressLeads || 0 %></td>
                  <td class="text-info"><%= u.assignedLeads || 0 %></td>
                  <td class="text-danger"><%= u.dealDropLeads || 0 %></td>
                  <td class="text-secondary"><%= u.otherLeads || 0 %></td>
                  <td class="text-success"><%= u.closedLeads || 0 %></td>
                  <td><%= u.conversionRate || 0 %>%</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } else { %>
          <div class="alert alert-light">No user performance data yet.</div>
        <% } %>
      </div>
    </div>
  <% } else if (users && users.length === 1) { %>
    <!-- Compact My Performance card for non-admin -->
    <div class="card shadow-sm mb-4">
      <div class="card-body text-center">
        <h5>My Performance</h5>
        <div class="row g-3 mt-2">
          <div class="col-4">
            <div class="fw-bold"><%= users[0].totalLeads || 0 %></div>
            <div class="text-muted small">Total Leads</div>
          </div>
          <div class="col-4">
            <div class="fw-bold"><%= users[0].closedLeads || 0 %></div>
            <div class="text-muted small">Closed Leads</div>
          </div>
          <div class="col-4">
            <div class="fw-bold"><%= users[0].conversionRate || 0 %>%</div>
            <div class="text-muted small">Conversion</div>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Recent Activity -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5>Recent Activity</h5>
      <% if (activity && activity.length) { %>
        <ul class="list-group list-group-flush">
          <% activity.forEach(a => { %>
            <li class="list-group-item d-flex justify-content-between">
              <span><%= a.message %></span>
              <small class="text-muted"><%= a.time %></small>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <div class="alert alert-light mb-0">No recent activity yet.</div>
      <% } %>
    </div>
  </div>

</div>

<!-- Scripts for Charts -->
<script>
  <% if (summary.totalLeads) { %>
    new Chart(document.getElementById('statusChart'), {
      type: 'doughnut',
      data: {
        labels: <%- JSON.stringify(charts.status.labels) %>,
        datasets: [{
          data: <%- JSON.stringify(charts.status.data) %>,
          backgroundColor: <%- JSON.stringify(charts.status.colors) %>
        }]
      },
      options: {
        plugins: {
          legend: { position: 'bottom' },
          tooltip: {
            callbacks: {
              label: function(ctx) {
                return ctx.label + ': ' + ctx.raw;
              }
            }
          }
        }
      }
    });
  <% } %>

  <% if (charts.source.data.length) { %>
    new Chart(document.getElementById('sourceChart'), {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(charts.source.labels) %>,
        datasets: [{ label: 'Leads', data: <%- JSON.stringify(charts.source.data) %>, backgroundColor: '#0d6efd' }]
      },
      options: { scales: { y: { beginAtZero: true } } }
    });
  <% } %>

  <% if (charts.chairsByUser.data.length) { %>
    new Chart(document.getElementById('chairsByUserChart'), {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(charts.chairsByUser.labels) %>,
        datasets: [{ label: 'Chairs Sold', data: <%- JSON.stringify(charts.chairsByUser.data) %>, backgroundColor: '#20c997' }]
      },
      options: { scales: { y: { beginAtZero: true } } }
    });
  <% } %>

  <% if (charts.revenueByUser.data.length) { %>
    new Chart(document.getElementById('revenueByUserChart'), {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(charts.revenueByUser.labels) %>,
        datasets: [{ label: 'Revenue (₹)', data: <%- JSON.stringify(charts.revenueByUser.data) %>, backgroundColor: '#fd7e14' }]
      },
      options: { scales: { y: { beginAtZero: true } }, plugins: { tooltip: { callbacks: { label: ctx => "₹" + ctx.raw } } } }
    });
  <% } %>

  <% if (charts.chairsByModel.data.length) { %>
    new Chart(document.getElementById('chairsByModelChart'), {
      type: 'doughnut',
      data: {
        labels: <%- JSON.stringify(charts.chairsByModel.labels) %>,
        datasets: [{ data: <%- JSON.stringify(charts.chairsByModel.data) %>, backgroundColor: ['#0d6efd','#6f42c1','#198754','#dc3545','#ffc107'] }]
      }
    });
  <% } %>

  <% if (charts.monthlyTrend.labels.length) { %>
    new Chart(document.getElementById('monthlyTrendChart'), {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(charts.monthlyTrend.labels) %>,
        datasets: [
          {
            label: 'Chairs Sold',
            data: <%- JSON.stringify(charts.monthlyTrend.chairs) %>,
            borderColor: '#20c997',
            backgroundColor: '#20c99733',
            tension: 0.3,
            yAxisID: 'y'
          },
          {
            label: 'Revenue (₹)',
            data: <%- JSON.stringify(charts.monthlyTrend.revenue) %>,
            borderColor: '#fd7e14',
            backgroundColor: '#fd7e1433',
            tension: 0.3,
            yAxisID: 'y1'
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: { beginAtZero: true, title: { display: true, text: 'Chairs Sold' } },
          y1: {
            beginAtZero: true,
            position: 'right',
            grid: { drawOnChartArea: false },
            title: { display: true, text: 'Revenue (₹)' }
          }
        },
        plugins: {
          tooltip: {
            callbacks: {
              label: ctx => ctx.dataset.label === 'Revenue (₹)' 
                ? "₹" + ctx.raw 
                : ctx.raw
            }
          }
        }
      }
    });
  <% } %>
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
