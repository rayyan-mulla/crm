  <!-- Filters -->
  <form id="filterForm" class="row g-3 mb-4 align-items-end" method="get" action="/leads">

    <!-- Search -->
    <div class="col-12 col-md-3">
      <label class="form-label">Search</label>
      <input name="search" class="form-control" placeholder="Search" 
            value="<%= query.search || '' %>">
    </div>

    <!-- From Date -->
    <div class="col-6 col-md-3">
      <label class="form-label">From Date</label>
      <input type="date" name="fromDate" class="form-control" 
            value="<%= query.fromDate || '' %>">
    </div>

    <!-- To Date -->
    <div class="col-6 col-md-3">
      <label class="form-label">To Date</label>
      <input type="date" name="toDate" class="form-control" 
            value="<%= query.toDate || '' %>">
    </div>

    <!-- Assigned To -->
    <div class="col-12 col-md-3">
      <label class="form-label">Assigned To</label>
      <select name="assignedTo" class="form-select">
        <option value="">All Assigned</option>
        <% if (users) { users.forEach(u => { %>
          <option value="<%= u._id %>" 
                  <%= String(query.assignedTo)===String(u._id) ? 'selected' : '' %>>
            <%= u.fullName %> (<%= u.role %>)
          </option>
        <% }) } %>
      </select>
    </div>

    <!-- Status -->
    <div class="col-6 col-md-3">
      <label class="form-label">Status</label>
      <select name="status" class="form-select">
        <option value="">All Status</option>
        <% ["New","In Progress","Closed","Assigned","Deal Drop","Other"].forEach(s => { %>
          <option value="<%= s %>" <%= query.status===s ? 'selected' : '' %>>
            <%= s %>
          </option>
        <% }) %>
      </select>
    </div>

    <!-- Sort Field -->
    <div class="col-6 col-md-3">
      <label class="form-label">Sort By</label>
      <select name="sortField" class="form-select">
        <option value="createdAt" <%= query.sortField==="createdAt" ? "selected" : "" %>>Newest</option>
        <option value="customer_name" <%= query.sortField==="customer_name" ? "selected" : "" %>>Name</option>
      </select>
    </div>

    <!-- Sort Order -->
    <div class="col-6 col-md-2">
      <label class="form-label">Order</label>
      <select name="sortOrder" class="form-select">
        <option value="desc" <%= query.sortOrder==="desc" ? "selected" : "" %>>Desc</option>
        <option value="asc"  <%= query.sortOrder==="asc" ? "selected" : "" %>>Asc</option>
      </select>
    </div>

    <!-- Buttons Row -->
    <div class="col-12 col-md-4">
      <div class="d-flex gap-2 flex-wrap w-100">
        <button type="submit" class="btn btn-primary flex-grow-1">Filter</button>

        <button type="submit"
                class="btn btn-danger flex-grow-1"
                formaction="/leads/export/pdf"
                formmethod="get">
          PDF
        </button>

        <button type="submit"
                class="btn btn-success flex-grow-1"
                formaction="/leads/export/excel"
                formmethod="get">
          Excel
        </button>
      </div>
    </div>

  </form>

  <!-- Sticky actions: per page (everyone) + bulk actions (admin only) -->
  <div class="sticky-actions d-flex flex-wrap align-items-center justify-content-between gap-2 mb-2">

    <!-- Left: Per-page form (visible to all) -->
    <form 
      id="limitForm" 
      class="d-flex align-items-center gap-2 mb-0" 
      method="get" 
      action="/leads"
    >
      <span class="small mb-0">Per page</span>

      <!-- Preserve current filters as hidden inputs -->
      <input type="hidden" name="search"     value="<%= query.search || '' %>">
      <input type="hidden" name="fromDate"   value="<%= query.fromDate || '' %>">
      <input type="hidden" name="toDate"     value="<%= query.toDate || '' %>">
      <input type="hidden" name="assignedTo" value="<%= query.assignedTo || '' %>">
      <input type="hidden" name="status"     value="<%= query.status || '' %>">
      <input type="hidden" name="sortField"  value="<%= query.sortField || 'createdAt' %>">
      <input type="hidden" name="sortOrder"  value="<%= query.sortOrder || 'desc' %>">

      <!-- When changing limit, usually makes sense to reset to page 1 -->
      <input type="hidden" name="page" value="1">

      <select 
        name="limit" 
        id="limitSelect" 
        class="form-select form-select-sm" 
        style="width:auto; min-width:80px;"
        onchange="this.form.submit()"
      >
        <option value="10"  <%= +limit === 10  ? 'selected' : '' %>>10</option>
        <option value="25"  <%= +limit === 25  ? 'selected' : '' %>>25</option>
        <option value="50"  <%= +limit === 50  ? 'selected' : '' %>>50</option>
